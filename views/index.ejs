<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Blog</title>
	</head>
	<body>
		<div class="container">
			<h1 class="mb-4">Blog Article</h1>
			<a href="/articles/new" class="btn btn-outline-success">New Article</a>
			<% articles.forEach(articles => { %>
			<div class="card mt-4">
				<div class="card-body">
					<h4 class="card-title"><%= articles.title %></h4>
					<div class="card-subtile text-muted mb-2">
						<%= articles.createdAt.toLocaleDateString() %>
					</div>
					<div class="card-text mb-2"><%= articles.description %></div>
					<a
						href="/articles/<%= articles.id %>/<%= articles.slug %>"
						class="btn btn-primary"
						>Read More</a
					>
					<a href="/articles/edit/<%= articles.id %>" class="btn btn-info"
						>Edit</a
					>
					<form
						action="/articles/<%= articles.id %>?_method=DELETE"
						method="POST"
						class="d-inline"
					>
						<button type="submit" class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
			<% }) %>
		</div>
	</body>
</html>
